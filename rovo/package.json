{
  "name": "code-risk-radar-rovo",
  "version": "1.0.0",
  "description": "Rovo integration for Code Risk Radar - Intelligent code risk analysis with automated remediation",
  "main": "src/rovoIntegration.js",
  "scripts": {
    "test": "jest tests/rovo-integration.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/rovo src/actions",
    "deploy": "forge deploy",
    "install": "forge install"
  },
  "dependencies": {
    "@forge/api": "^2.0.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "eslint": "^8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/rovo/**/*.js",
      "src/actions/**/*.js",
      "src/rovoIntegration.js"
    ],
    "testMatch": [
      "**/tests/rovo-integration.test.js"
    ]
  },
  "keywords": [
    "rovo",
    "atlassian",
    "forge",
    "code-analysis",
    "security",
    "risk-detection",
    "ml",
    "embeddings"
  ],
  "author": "Code Risk Radar Team",
  "license": "MIT"
}
